{
  "name": "react-input-position",
  "version": "1.0.0-react19.0",
  "description": "A React component that decorates it's children with mouse/touch position tracking, a status toggle fired by click/gesture events, and more.",
  "keywords": [
    "touch",
    "tap",
    "gesture",
    "mouse",
    "click",
    "move",
    "cursor",
    "input",
    "position",
    "coordinates",
    "track",
    "event",
    "listener"
  ],
  "license": "MIT",
  "author": "Adam Risberg <myniztan@hotmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ctasca/react-input-position.git"
  },
  "homepage": "https://adamrisberg.github.io/react-input-position",
  "main": "dist/index.js",
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "transpile": "rimraf dist && babel src -d dist --ignore src/__tests__/*",
    "prepublishOnly": "npm run transpile",
    "build": "rimraf examples/dist && webpack --mode production",
    "deploy": "gh-pages -d examples/dist",
    "publish-demo": "npm run build && npm run deploy"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "esmodules": true
          }
        }
      ],
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-class-properties"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/src/__tests__/index.test.js",
      "<rootDir>/dist/"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/plugin-transform-class-properties": "^7.24.1",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.3",
    "@types/jest": "^29.5.12",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "eslint-webpack-plugin": "^5.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.5",
    "style-loader": "^4.0.0",
    "webpack": "^5.93.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "html-webpack-plugin": "^5.6.4",
    "prop-types": "^15.7.2"
  }
}
